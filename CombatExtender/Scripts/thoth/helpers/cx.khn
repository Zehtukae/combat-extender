local __util = require 'larian.util'

function ArcaneWardOverflowCX(spellCast, entity)
    local entity = entity or context.Target
    local AWDuration = GetStatusDuration('ARCANE_WARD', entity)
    if spellCast then
        return ConditionResult(AWDuration + context.HitDescription.SpellPowerLevel >= (1 * entity.GetClassLevel('Wizard')))
    end

    return ConditionResult(AWDuration + entity.GetClassLevel('Wizard') >= (1 * entity.GetClassLevel('Wizard')))
end

